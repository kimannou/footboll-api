{% extends 'base.html.twig' %}

{% block title %}Footnball!{% endblock %}

{% block body %}

    <header>
      <h1>Match Scores</h1>
    </header>
    <main>
      <form action="{{ path('app_foot') }}" method="GET">
        <label for="search">Search:</label>
        <input type="text" id="search" name="search">
        <button type="submit">Go</button>
      </form>
      <ul class="match-list">
        {% for match in matches %}
        <li class="match-item">
          <div class="team-names">
            <span class="home-team">{{ match.teams.home.name }}</span>
            <span class="vs">vs</span>
            <span class="away-team">{{ match.teams.away.name }}</span>
          </div>
          <div class="score">
            <span class="home-score">{{ match.goals.home }}</span>
            <span class="vs">-</span>
            <span class="away-score">{{ match.goals.away }}</span>
          </div>
        </li>
        {% endfor %}
      </ul>
        {% if not matches %}
        <p>No matches found.</p>
        {% endif %}
</main>
<style>
/* styles.css */

body {
  font-family: Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
}

header {
  background-color: #444;
  color: #fff;
  padding: 10px;
}

h1 {
  margin: 0;
}

main {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

form {
  margin-bottom: 20px;
}

label {
  display: block;
  margin-bottom: 10px;
}

input[type="text"] {
  padding: 5px;
  border-radius: 3px;
  border: 1px solid #ccc;
}

button {
  padding: 5px 10px;
  border-radius: 3px;
  border: none;
  background-color: #444;
  color: #fff;
  cursor: pointer;
}

.match-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.match-item {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 3px;
  margin-bottom: 10px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.team-names {
  display: flex;
  align-items: center;
}

.home-team {
  font-weight: bold;
}

.vs {
  margin: 0 10px;
}

.score {
  font-size: 24px;
  font-weight: bold;
}

.home-score {
  color: #333;
}

.away-score {
  color: #999;
}

a {
  text-decoration: none;
  color: #fff;
  background-color: #444;
  padding: 5px 10px;
  border-radius: 3px;
  transition: background-color 0.2s ease;
}

a:hover {
  background-color: #555;
}
</style>
{% endblock %}
